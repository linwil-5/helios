<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
  </head>
  <body>

    <header id="main-header">
      <div class="container">
        <h1>Order History</h1>
      </div>
    </header>

    <section id="showcase">
      <div class="container">

        <h3> List </h3>
        <textarea rows="80" cols="50">

        Orders

          <% var i = 0; %>
          <% while(theOrders[i] != undefined) { %>
          Customer ID: <%= theOrders[i].customer_id %>
          Order ID:  <%= theOrders[i].order_id %>

          <% i = i + 1; %>
          <% } %>

        Users

          <% var i = 0; %>
          <% while(theUsers[i] != undefined) { %>
          User ID: <%= theUsers[i].user_id %>
          User Email:  <%= theUsers[i].user_email %>
          User Password: <%= theUsers[i].user_password %>
          Is admin: <%= theUsers[i].isAdmin %>

          <% i = i + 1; %>
          <% } %>

        ShoppingBaset

          <% var i = 0; %>
          <% while(theShopping[i] != undefined) { %>
            Product Count: <%= theShopping[i].product_count %>
            Order ID:  <%= theShopping[i].order_id %>
            Product ID: <%= theShopping[i].product_id %>
            Product Price: <%= theShopping[i].product_price %>

            <% i = i + 1; %>
            <% } %>

        </textarea>

      </div>

    </section>
  </body>
</html>
