<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
  </head>
  <body>

    <header id="main-header">
      <div class="container">
        <h1>Cart</h1>
      </div>
    </header>

    <section id="showcase">
      <div class="container">
        <div class="row">
            <% var theTotalPrice = 0; %>
            <% for (var i = 0; i < products.length; i++) { %>
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="<%= products[i].cover %>">
                        <div class="caption">
                            <h3>Name: <%= products[i].item.product_name %></h3>
                            <h3>Quantity: <%= products[i].qty %>
                                <a href="delete-onefromcart/<%= products[i].item.product_name %>">Delete one</a>
                            </h3>

                            <p>
                              Price: <%= products[i].item.product_price %> $

                              <% if( databasePrice[i].product_price != theproducts[i].item.product_price) { %>
                                <p><a href="updateprice/<%= products[i].item.product_id %>">Update Price</a></p>
                              <% } %>
                            </p>

                        </div>
                    </div>
                </div>
                <% theTotalPrice = theTotalPrice + products[i].price; %>
            <% } %>
            <h2>Total Price: <%= theTotalPrice %> $</h2>
              <form method="POST" action"/cart/checkout">
                <input type="submit" value="Checkout">
              </form>
        </div>
      </div>

    </section>
  </body>
</html>
